// ./Pixel/Jenkinsfile - CORREÇÃO DE CAMINHO

pipeline {
    agent any
    environment {
        SERVICE_NAME = 'pixel'
    }
    stages {
        stage('Checkout e Deploy') {
            steps {
                script {
                    echo "Parando, reconstruindo e iniciando o serviço ${SERVICE_NAME}..."
                    // A correção é remover o caminho e deixar o docker-compose procurar o arquivo na raiz.
                    sh "docker-compose up -d --build ${SERVICE_NAME}"
                }
            }
        }
    }
    post {
        always {
            mail to: 'emilycaroline689@gmail.com',
                 subject: "Jenkins Job: ${currentBuild.fullDisplayName} - ${currentBuild.currentResult}",
                 body: "O Job ${env.JOB_NAME} (${SERVICE_NAME}) foi concluído.\n\nStatus: ${currentBuild.currentResult}.\n\nPara mais detalhes, acesse: ${env.BUILD_URL}"
        }
    }
}