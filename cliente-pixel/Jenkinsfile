pipeline {
    agent any // Define o agente padrão no nível superior

    environment {
        GIT_URL             = 'https://github.com/aemilymelo/TAC_containers.git'
        PROJECT_DIR         = 'cliente-pixel'
        DOCKER_SERVICE_NAME = 'nginx'
    }

    stages {
        stage('Checkout from Git') {
            steps {
                echo "--- Baixando o código do repositório ---"
                git url: env.GIT_URL, branch: 'main'
            }
        }

        stage('Build Frontend') {
            // Este stage não usa um 'agent' próprio, pois vamos chamar o Docker manualmente
            steps {
                script {
                    echo "--- Preparando para buildar o frontend dentro do Docker ---"
                    
                    def dockerImage = 'node:18'
                    
                    // Usamos a variável de ambiente 'WORKSPACE' que o Jenkins fornece.
                    // Ela contém o caminho absoluto para a área de trabalho (ex: /var/jenkins_home/workspace/cliente-pixel)
                    // e garante que não teremos o problema do diretório com '@2'.
                    sh """
                        docker run --rm \
                            -v "${env.WORKSPACE}/${env.PROJECT_DIR}":/app \
                            -w /app \
                            ${dockerImage} \
                            sh -c 'npm install --legacy-peer-deps && npm run build'
                    """
                }
            }
        }

        stage('Deploy Frontend') {
            steps {
                echo "--- Reiniciando o serviço NGINX para carregar os novos arquivos ---"
                sh "docker-compose restart ${env.DOCKER_SERVICE_NAME}"
            }
        }
    }

    post {
        always {
            script {
                def jobStatus = currentBuild.currentResult
                def subject = "[Jenkins] ${jobStatus}: Job '${env.JOB_NAME}' - Build #${env.BUILD_NUMBER}"
                def body = """
                        <h1>Status do Build: ${jobStatus}</h1>
                        <p>
                            Job: ${env.JOB_NAME}<br>
                            Build: #${env.BUILD_NUMBER}<br>
                            Link: <a href='${env.BUILD_URL}'>${env.BUILD_URL}</a>
                        </p>
                """

                echo "--- Enviando notificação por e-mail ---"
                emailext(
                    to: 'emilycaroline689@gmail.com',
                    subject: subject,
                    body: body,
                    mimeType: 'text/html'
                )
            }
        }
    }
}