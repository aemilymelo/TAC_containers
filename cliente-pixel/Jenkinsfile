pipeline {
    agent any

    environment {
        GIT_URL = 'https://github.com/aemilymelo/TAC_containers.git'
        DOCKER_SERVICE_NAME = 'nginx'
        // Remova PROJECT_DIR pois não estamos mais usando
    }

    stages {
        stage('Checkout from Git') {
            steps {
                echo "--- Baixando o código do repositório ---"
                git url: env.GIT_URL, branch: 'main'
            }
        }

        stage('Build Frontend') {
            agent {
                docker {
                    image 'node:18'
                    args '-v $WORKSPACE:/app -w /app'
                }
            }
            steps {
                echo "--- Instalando dependências e fazendo o build do Next.js ---"
                // Verifique primeiro onde está o package.json
                sh 'ls -la'
                // Se estiver em um subdiretório, navegue até ele
                dir('cliente-pixel') {  // Substitua pelo seu subdiretório se necessário
                    sh 'npm install --legacy-peer-deps'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy Frontend') {
            steps {
                echo "--- Reiniciando o serviço NGINX ---"
                sh "docker-compose restart ${env.DOCKER_SERVICE_NAME}"
            }
        }
    }

    post {
        always {
            script {
                // Configuração de email reduzida para testes
                emailext(
                    to: 'emilycaroline689@gmail.com',
                    subject: "Build ${currentBuild.currentResult}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "Detalhes: ${env.BUILD_URL}"
                )
            }
        }
    }
}